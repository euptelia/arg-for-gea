// Recurrent boundary expansion and contraction before the sampling stage
// Minimum boundary: x0 = 0, x1 = 0.1, y0 = 0, y1 = 1
// Maximum boundary: x0 = 0, x1 = 1, y0 = 0, y1 = 1
1:100000 reproduction() {
	// 10 nearby trees
	neighbors = i2.nearestNeighbors(individual, 10);
	if (!neighbors.size())
		return;
	mate = sample(neighbors, 1);
	// Relative time in an environmental cycle
	peakTime = 0.2*envPeriod;
	expansionSpeed = 0.9/peakTime;
	contractionSpeed = 0.9/(envPeriod-peakTime);
	currentPhase = sim.cycle%envPeriod;
	b = currentPhase < peakTime ? (0.1+currentPhase*expansionSpeed) else (1-(currentPhase-peakTime)*contractionSpeed);
	defineGlobal("currentBoundary", b);
	// Overlapping generations, on average R offsprings were generated
	for (i in seqLen(rpois(1,R)))
	{
		offspring = subpop.addCrossed(individual, mate);
		do pos = individual.spatialPosition + rnorm(2, 0, sigma_D);
		while (!((pos[0]>=0) & (pos[0]<=currentBoundary) & (pos[1]>=0) & (pos[1]<=1)));
		offspring.setSpatialPosition(pos);
	}
}

// Expansion at the sampling stage
100001:101000 reproduction() {
	// 10 nearby trees
	neighbors = i2.nearestNeighbors(individual, 10);
	if (!neighbors.size())
		return;
	mate = sample(neighbors, 1);
	b = 0.1 + (sim.cycle-100000) * (0.9/1000);
	defineGlobal("currentBoundary", b);
	// Overlapping generations, on average R offsprings were generated
	for (i in seqLen(rpois(1,R)))
	{
		offspring = subpop.addCrossed(individual, mate);
		do pos = individual.spatialPosition + rnorm(2, 0, sigma_D);
		while (!((pos[0]>=0) & (pos[0]<=currentBoundary) & (pos[1]>=0) & (pos[1]<=1)));
		offspring.setSpatialPosition(pos);
	}
}

